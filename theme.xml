<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
<carousel name="systemcarousel">
        <zIndex>43</zIndex>	      
        <type>vertical_wheel</type>
        <pos>0.35 0</pos>
        <size>1 1</size>
        <logoScale>1.1</logoScale>
        <logoSize>0.2 0.1</logoSize>
        <color>00000000</color>
        <maxLogoCount>15</maxLogoCount>
        <logoRotation>-4</logoRotation>
		<logoRotationOrigin>-4.0 0.5</logoRotationOrigin>
		<logoAlignment>center</logoAlignment>        
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>                 
         <path>./_inc/images/overlay.png</path>
      </image>                    
      <text name="systemInfo">     
         <pos>0.1 0.47</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
	     <fontSize>0.03</fontSize>
         <zIndex>6</zIndex>	     
      </text>            
   </view>
</feature>


